<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/alat"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.bangunan.widgets.wrapElement
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.bangunan.widgets.cardElement
                android:backgroundTint="#E96F0D"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:src="@drawable/toolbox"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:tint="@color/white" />
            </com.example.bangunan.widgets.cardElement>
            <TextView
                android:layout_marginTop="6dp"
                android:textSize="12dp"
                android:text="Alat"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.example.bangunan.widgets.wrapElement>
        <RelativeLayout
            android:id="@+id/perlengkapan"
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <com.example.bangunan.widgets.wrapElement
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.bangunan.widgets.cardElement
                android:backgroundTint="#FFDE00"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:src="@drawable/plumbing"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    app:tint="@color/white" />
            </com.example.bangunan.widgets.cardElement>
            <TextView

                android:layout_marginTop="6dp"
                android:textSize="12dp"
                android:text="Perlengkapan"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.example.bangunan.widgets.wrapElement>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <com.example.bangunan.widgets.wrapElement
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.bangunan.widgets.cardElement
                android:backgroundTint="#DE3814"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/noun_building_materials_4908144"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:tint="@color/white" />
            </com.example.bangunan.widgets.cardElement>
            <TextView
                android:layout_marginTop="6dp"
                android:textSize="12dp"
                android:text="Material"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.example.bangunan.widgets.wrapElement>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <com.example.bangunan.widgets.wrapElement
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.bangunan.widgets.cardElement
                android:backgroundTint="#F0900B"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/paint_bucket"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:tint="@color/white" />
            </com.example.bangunan.widgets.cardElement>
            <TextView
                android:layout_marginTop="6dp"
                android:textSize="12dp"
                android:text="Cat"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.example.bangunan.widgets.wrapElement>
    </LinearLayout>

</LinearLayout>